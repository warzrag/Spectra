rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - authenticated users can read all, write own doc or admin can write any
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        request.auth.uid == userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    // Profiles collection - any authenticated user can CRUD
    match /profiles/{profileId} {
      allow read, write: if request.auth != null;
    }

    // Folders collection - any authenticated user can CRUD
    match /folders/{folderId} {
      allow read, write: if request.auth != null;
    }

    // Extensions collection - any authenticated user can CRUD
    match /extensions/{extensionId} {
      allow read, write: if request.auth != null;
    }

    // Activity logs - any authenticated user can create, admins can read
    match /activityLogs/{logId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
    }
  }
}
