rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Extensions: authenticated users can read/write
    match /extensions/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Profile sync: authenticated users can read/write
    match /profiles/{profileId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
